#!/usr/bin/make -f

DISTRIBUTION = $(shell lsb_release -sr)
VERSION = %%VERSION%%
PACKAGEVERSION = $(VERSION)-0~$(DISTRIBUTION).0

override_dh_auto_install: SBINDIR=$(CURDIR)/debian/moidemd/usr/sbin
override_dh_auto_install: DEMDIR=$(CURDIR)/debian/moidemd/var/lib/moidemd
override_dh_auto_install:
	mkdir -p $(SBINDIR)
	install -m 0755 moidemd $(SBINDIR)
	mkdir -p $(DEMDIR)
	install -m 0644 %%DEM%% $(DEMDIR)
	dh_systemd_enable || true
	dh_systemd_start || true

override_dh_gencontrol:
	dh_gencontrol -- -v$(PACKAGEVERSION)

%:
	dh $@ --with-systemd

.PHONY: clean
